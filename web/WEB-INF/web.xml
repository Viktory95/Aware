<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.vi.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.vi.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>citation</servlet-name>
        <servlet-class>com.vi.servlets.CitationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>citation</servlet-name>
        <url-pattern>/citation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>posts</servlet-name>
        <servlet-class>com.vi.servlets.PostsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>posts</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>com.vi.servlets.PostServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>likesposts</servlet-name>
        <servlet-class>com.vi.servlets.LikesPostsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>likesposts</servlet-name>
        <url-pattern>/likesposts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>popularposts</servlet-name>
        <servlet-class>com.vi.servlets.PopularPostsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>popularposts</servlet-name>
        <url-pattern>/popularposts</url-pattern>
    </servlet-mapping>

</web-app>